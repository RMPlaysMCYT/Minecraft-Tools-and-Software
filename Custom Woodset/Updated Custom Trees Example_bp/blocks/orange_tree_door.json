{
	"format_version": "1.20.80",
	"minecraft:block": {
		"description": {
			"identifier": "wiki:orange_tree_door",
			"states": {
				"wiki:powered": [
					false,
					true
				],
				"wiki:upper_block_bit": [
					false,
					true
				],
				"wiki:open_bit": [
					false,
					true
				],
				"wiki:reversed": [
					false,
					true
				]
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [
						"minecraft:cardinal_direction"
					]
				}
			}
		},
		"components": {
			"minecraft:loot": "loot_tables/empty.json",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0.3
			},
			"minecraft:flammable": { 
				"catch_chance_modifier": 5,
				"destroy_chance_modifier": 20
			},
			"tag:wiki:is_door": {},
			"minecraft:custom_components": [
				"wiki:door"
			],
			"minecraft:geometry": {
				"bone_visibility": {
					"open_top": "query.block_state('wiki:open_bit') && query.block_state('wiki:upper_block_bit') && !q.block_state('wiki:reversed')",
					"open_bottom": "query.block_state('wiki:open_bit') && query.block_state('wiki:upper_block_bit') == false && !q.block_state('wiki:reversed')",
					"top": "query.block_state('wiki:open_bit') == false && query.block_state('wiki:upper_block_bit') && !q.block_state('wiki:reversed')",
					"bottom": "query.block_state('wiki:open_bit') == false && query.block_state('wiki:upper_block_bit') == false && !q.block_state('wiki:reversed')",
					"reversed_open_top": "query.block_state('wiki:open_bit') && query.block_state('wiki:upper_block_bit') && q.block_state('wiki:reversed')",
					"reversed_open_bottom": "query.block_state('wiki:open_bit') && query.block_state('wiki:upper_block_bit') == false && q.block_state('wiki:reversed')",
					"reversed_top": "query.block_state('wiki:open_bit') == false && query.block_state('wiki:upper_block_bit') && q.block_state('wiki:reversed')",
					"reversed_bottom": "query.block_state('wiki:open_bit') == false && query.block_state('wiki:upper_block_bit') == false && q.block_state('wiki:reversed')"
				},
				"identifier": "geometry.door"
			},
			"minecraft:display_name": "Orange Tree Door"
		},
		"permutations": [
			{
				"condition": "query.block_state('minecraft:cardinal_direction') == 'north'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							180,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:cardinal_direction') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							90,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('minecraft:cardinal_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							270,
							0
						]
					}
				}
			},
			{
				"condition": "query.block_state('wiki:open_bit') == false",
				"components": {
					"minecraft:collision_box": {
						"origin": [
							-8,
							0,
							-8
						],
						"size": [
							16,
							16,
							3
						]
					},
					"minecraft:selection_box": {
						"origin": [
							-8,
							0,
							-8
						],
						"size": [
							16,
							16,
							3
						]
					}
				}
			},
			{
				"condition": "query.block_state('wiki:open_bit') == true && !q.block_state('wiki:reversed')",
				"components": {
					"minecraft:collision_box": {
						"origin": [
							-8,
							0,
							-8
						],
						"size": [
							3,
							16,
							16
						]
					},
					"minecraft:selection_box": {
						"origin": [
							-8,
							0,
							-8
						],
						"size": [
							3,
							16,
							16
						]
					}
				}
			},
			{
				"condition": "query.block_state('wiki:open_bit') == true && q.block_state('wiki:reversed')",
				"components": {
					"minecraft:collision_box": {
						"origin": [
							5,
							0,
							-8
						],
						"size": [
							3,
							16,
							16
						]
					},
					"minecraft:selection_box": {
						"origin": [
							5,
							0,
							-8
						],
						"size": [
							3,
							16,
							16
						]
					}
				}
			},
			{
				"condition": "query.block_state('wiki:upper_block_bit') == false",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "orange_tree_door_lower",
							"render_method": "blend"
						}
					}
				}
			},
			{
				"condition": "query.block_state('wiki:upper_block_bit') == true",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "orange_tree_door_upper",
							"render_method": "blend"
						}
					}
				}
			}
		]
	}
}